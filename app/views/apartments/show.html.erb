<%- model_class = Apartment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @apartment.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:floor) %>:</strong></dt>
  <dd><%= @apartment.floor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:block) %>:</strong></dt>
  <dd><%= @apartment.block %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dweller) %>:</strong></dt>
  <dd><%= @apartment.dweller %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fone) %>:</strong></dt>
  <dd><%= @apartment.fone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @apartment.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tenant_id) %>:</strong></dt>
  <dd><%= @apartment.tenant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:condominio_id) %>:</strong></dt>
  <dd><%= @apartment.condominio_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              condominio_apartments_path(condominio_id: @apartment.condominio_id), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tenant_apartment_path(@apartment, tenant_id: @tenant.id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tenant_apartment_path(@apartment, tenant_id: @tenant.id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
