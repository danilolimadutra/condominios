<%- model_class = Condominio -%>
<div class="page-header">
  <h3><%= @condominio.nome %></h3>
  <h3><small>Organização - <%= tenant_name @condominio.tenant_id %></small></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @condominio.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endereco) %>:</strong></dt>
  <dd><%= @condominio.endereco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sindico) %>:</strong></dt>
  <dd><%= @condominio.sindico %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
  <dd><%= @condominio.telefone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @condominio.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tenant_id) %>:</strong></dt>
  <dd><%= @condominio.tenant_id %></dd>
</dl>

<%= link_to 'Voltar para a página da Organização', root_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tenant_condominio_path(condominio: @condominio, tenant: @condominio.tenant_id),
                                          :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tenant_condominio_path(condominio: @condominio, tenant: @condominio.tenant_id),
              :method => 'delete',
              :data => { :confirm => t('.confirm',
              :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
