<%- model_class = TipoDespesa -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:tenant_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tipo_despesas.each do |tipo_despesa| %>
      <tr>
        <td><%= tipo_despesa.id %></td>
        <td><%= tipo_despesa.nome %></td>
        <td><%= tipo_despesa.tenant_id %></td>
        <td><%=l tipo_despesa.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      tenant_tipo_despesa_path(tipo_despesa, tenant_id: @tenant.id), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tenant_tipo_despesa_path(tipo_despesa, tenant_id: @tenant.id), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tenant_tipo_despesa_path(tipo_despesa, tenant_id: @tenant.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tenant_tipo_despesa_path(tenant_id: @tenant.id),
            :class => 'btn btn-primary' %>
