<%= form_for [@tenant, @despesa], :html => { :class => "form-horizontal despesa" } do |f| %>

  <% if @despesa.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@despesa.errors.count, "error") %> prohibited this despesa from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @despesa.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :tipo_despesa_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tipo_despesa_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tipo_despesa_id) %>
  </div>
  <div class="form-group">
    <%= f.label :descricao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :descricao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:descricao) %>
  </div>
  <div class="form-group">
    <%= f.label :data, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :data, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data) %>
  </div>
  <div class="form-group">
    <%= f.label :valor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :valor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:valor) %>
  </div>
  <div class="form-group">
    <%= f.label :pagamento, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pagamento, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pagamento) %>
  </div>
  <div class="form-group">
    <%= f.label :observacao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :observacao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:observacao) %>
  </div>
  <div class="form-group">
    <%= f.label :anexo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :anexo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:anexo) %>
  </div>
  <div class="form-group">
    <%= f.label :fornecedor_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :fornecedor_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fornecedor_id) %>
  </div>

  <%= f.hidden_field :tenant_id, value: params[:tenant_id], :class => 'form-control' %>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tenant_despesas_path(tenant_id: @tenant.id), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
